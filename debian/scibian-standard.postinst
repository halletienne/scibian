#!/bin/sh

set -e

# Use Bash as default shell for new users

echo "SHELL=/bin/bash" > /etc/default/useradd

# PAM update
pam-auth-update --package

[ ! -d /var/lib/scibian ] && mkdir /var/lib/scibian/ 

## TO BE REMOVED when keytab host retrieval is set
echo "%tmi ALL=(ALL) ALL" >> /etc/sudoers



